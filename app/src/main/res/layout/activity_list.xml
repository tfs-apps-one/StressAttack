                android:id="@+id/text_list_total"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="2"
                app:backgroundTint="@null"
                android:background="@drawable/bak_1"
                android:gravity="center|left"
                android:text="累計浄化ポイント：999"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btn_guide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:background="@drawable/bak_1"
                android:onClick="onGuide"
                android:text="@string/list_menu_1"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btn_back_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                app:backgroundTint="@null"
                android:background="@drawable/bak_1"
                android:onClick="onBackList"
                android:text="@string/list_menu_2"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

